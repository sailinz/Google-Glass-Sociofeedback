<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_settings"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Please select the parameters you would like to monitor with."
        android:textSize="12dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/description"/>

    <CheckBox android:id="@+id/checkbox_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume"
        android:onClick="onCheckboxClicked"
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/settings"
        />


    <CheckBox android:id="@+id/checkbox_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch"
        android:onClick="onCheckboxClicked"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/checkbox_v"
        android:layout_toEndOf="@+id/settings"
        />

    <!--CheckBox android:id="@+id/checkbox_sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speech Rate"
        android:onClick="onCheckboxClicked"
        android:layout_below="@+id/checkbox_v"
        android:layout_alignStart="@+id/checkbox_v"
        /-->


</RelativeLayout>